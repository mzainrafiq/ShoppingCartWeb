@model ShoppingCart.Web.ViewModels.ProductVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class=" text-privacy">List of Products</h2>
        </div>
        <div class="col-6 forAdmin" style="display: none">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp; Create New Products</a>
        </div>
    </div>
</div>

<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name 
            </th>
            <th>
                Product Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th class="forAdmin" style="display: none">
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>

                <td role="group" class="forAdmin" style="display: none">
                    <a asp-action="CreateUpdate" asp-controller="product" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-action="Delete" asp-controller="product" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script src="~/js/site.js"></script>
}
