@model ShoppingCart.Web.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class = "container p-4">
    <div class = "row p-3">
        <div class = "col-6">
            <h2 class=" text-privacy">List of Categories</h2>
        </div>
        <div class="col-6 forAdmin" text-end style="display: none">
            <a class= "btn btn-primary" asp-action="CreateUpdate" asp-controller="Category" ><i class="bi bi-plus-circle"></i>&nbsp; Create New Categroy</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th class="forAdmin" style="display:none">
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.categories)
        {
            <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>

                <td role="group" class="forAdmin" style="display: none">
                        <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="~/js/site.js"></script>
}